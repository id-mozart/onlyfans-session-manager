{
  "name": "onlyfans-session-manager-desktop",
  "version": "1.0.0",
  "description": "Desktop app for managing OnlyFans account sessions",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "electron:start": "NODE_ENV=development electron .",
    "build": "electron-builder --publish=never",
    "build:mac": "electron-builder --mac --publish=never",
    "build:mac:universal": "electron-builder --mac --universal --publish=never",
    "build:win": "electron-builder --win --publish=never",
    "build:linux": "electron-builder --linux --publish=never",
    "dist": "npm run build"
  },
  "author": "Your Agency",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/id-mozart/onlyfans-session-manager.git"
  },
  "homepage": "https://github.com/id-mozart/onlyfans-session-manager#readme",
  "bugs": {
    "url": "https://github.com/id-mozart/onlyfans-session-manager/issues"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.agency.onlyfans-session-manager",
    "productName": "OnlyFans Session Manager",
    "directories": {
      "output": "dist"
    },
    "files": ["main.js", "preload.js"],
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "type": "distribution"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "iconSize": 100,
      "window": { "width": 600, "height": 400 },
      "contents": [
        { "x": 150, "y": 180, "type": "file" },
        { "x": 450, "y": 180, "type": "link", "path": "/Applications" }
      ],
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  }
}
