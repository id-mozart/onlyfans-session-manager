{
  "name": "onlyfans-session-manager-desktop",
  "version": "1.0.0",
  "description": "Desktop app for managing OnlyFans account sessions",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "electron:start": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:universal": "electron-builder --mac --universal",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build"
  },
  "author": "Your Agency",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.agency.onlyfans-session-manager",
    "productName": "OnlyFans Session Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "icon.png"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "icon.png"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      "icon": "icon.png",
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "type": "distribution"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "icon.png",
      "iconSize": 100,
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 180,
          "type": "file"
        },
        {
          "x": 450,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icon.png",
      "category": "Utility"
    }
  }
}
